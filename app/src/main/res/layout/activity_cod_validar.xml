<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_logo"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_atrasss"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/flecha" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/imagen"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/titulo_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:text="@string/codigoActivar"
        android:textColor="@color/boton_normal"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/titulo_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/efectologin"
        android:ems="10"
        android:drawableLeft="@drawable/ico_m"
        android:hint="@string/ejemplo_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/codigo"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@drawable/ico_p"
        android:hint="@string/codigoEjem"
        android:background="@drawable/efectologin"
        android:inputType="textEmailAddress" />


    <Button
        android:id="@+id/btn_validar"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/codigo"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:background="@drawable/btn_efectos"
        android:text="@string/boton_codigo"
        android:textColor="@color/cannabis_verde" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/activado"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/cargado_activo" />

</RelativeLayout>