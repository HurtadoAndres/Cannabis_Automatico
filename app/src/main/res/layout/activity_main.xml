<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_logo"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_atras"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/flecha" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:text="@string/titulo_login"
            android:textColor="@color/boton_normal"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="320dp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:background="@drawable/efectologin"
            android:drawableLeft="@drawable/ico_m"
            android:ems="10"
            android:hint="@string/ejemplo_email"
            android:inputType="textEmailAddress" />


        <EditText
            android:id="@+id/password"
            android:layout_width="320dp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/efectologin"
            android:drawableLeft="@drawable/ico_p"
            android:ems="10"
            android:hint="@string/ejemplo_password"
            android:inputType="textPassword"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <Button
                android:id="@+id/btn_iniciar"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="30dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/btn_efectos"
                android:text="@string/btn_iniciar"
                android:textColor="@color/cannabis_verde" />


            <Button
                android:id="@+id/btn_recuperar"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="240dp"
                android:layout_marginTop="21dp"
                android:text="@string/recuperar_password"
                android:textColor="@color/cannabis_verde" />

            <TextView
                android:id="@+id/textoregistrar"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_below="@+id/btn_iniciar"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="145dp"
                android:layout_marginBottom="30dp"
                android:text="@string/textoR" />

            <Button
                android:id="@+id/btn_registrar"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/btn_recuperar"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:layout_marginStart="249dp"
                android:layout_marginTop="130dp"
                android:layout_marginBottom="25dp"
                android:text="@string/btn_registrar"
                android:textColor="@color/cannabis_verde" />

        </RelativeLayout>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/cargando"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/cargando" />




</androidx.constraintlayout.widget.ConstraintLayout>