<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo_perfil"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/salir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:text="X"
        android:textColor="@color/cannabis_color_gris"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/boton_circular_salir"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/logo_actual"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andres Hurtado"
            android:textColor="@color/cannabis_color_gris"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/fondo_perfil_n"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatico"
                android:textSize="10sp"
                android:textColor="@color/cannabis_color_gris"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo"
                android:textSize="10sp"
                android:textColor="@color/cannabis_color_gris"/>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/fondo_perfil_v"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="10sp"
                android:textColor="@color/cannabis_color_gris"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agenda"
                android:textSize="10sp"
                android:textColor="@color/cannabis_color_gris"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/fondo_perfil_a"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apagar Luz"
                android:textSize="10sp"
                android:textColor="@color/cannabis_color_gris"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proxima Agenda"
                android:textSize="10sp"
                android:textColor="@color/cannabis_color_gris"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Sesion"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:background="@drawable/btn_befectos">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/cerrar_sesion"
            android:textColor="@color/cannabis_color_gris"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

