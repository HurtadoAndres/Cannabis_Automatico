<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_logo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:text="@string/titulo_registrar"
        android:textColor="@color/boton_normal"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_atrass"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/flecha" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/imagen"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="138dp"
        android:ems="10"
        android:hint="@string/ejemplo_nombre"
        android:drawableLeft="@drawable/ico_s"
        android:background="@drawable/efectologin"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/apellido"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/nombre"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@drawable/ico_s"
        android:background="@drawable/efectologin"
        android:hint="@string/ejemplo_apellido"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/apellido"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@drawable/ico_m"
        android:background="@drawable/efectologin"
        android:hint="@string/ejemplo_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@drawable/ico_p"
        android:hint="@string/ejemplo_password"
        android:background="@drawable/efectologin"
        android:inputType="textPassword" />





    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="91dp"
        android:layout_marginRight="91dp"
        android:background="@drawable/btn_efectos"
        android:text="@string/btn_registrar"
        android:textColor="@color/cannabis_verde" />



        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/cargando"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cargando" />



</RelativeLayout>