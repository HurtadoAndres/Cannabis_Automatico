<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".editar_fr"
    android:background="@drawable/fondo_poppup_opciones">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/cannabis_verde_D"
        android:textStyle="bold"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app= " http://schemas.android.com/apk/res-auto "
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src ="@drawable/cuenta"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000" />

    <LinearLayout
        android:id="@+id/btn_buscar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/select_camara"
        android:src="@drawable/camara_n"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="80dp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="270dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        app:boxStrokeColor="@color/cannabis_verde"
        app:hintTextColor="@color/cannabis_verde"
        android:hint="Titulo">

        <EditText
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="270dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:boxStrokeColor="@color/cannabis_verde"
        app:hintTextColor="@color/cannabis_verde"
        android:hint="Subtitulo">

        <EditText
            android:id="@+id/titulo_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="270dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        app:boxStrokeColor="@color/cannabis_verde"
        app:hintTextColor="@color/cannabis_verde"
        android:hint="Descripcion">

        <EditText
            android:id="@+id/descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirmar"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="380dp"
        android:text="Confirmar edicion"
        app:cornerRadius="14dp"
        app:strokeColor="@color/cannabis_verde"
        app:strokeWidth="2dp"
        android:textColor="@color/cannabis_verde"/>
</FrameLayout>