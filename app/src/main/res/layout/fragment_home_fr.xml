<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_fr">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:layout_gravity="center"
           android:background="@color/cannabis_oficcial"
           android:gravity="center"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:text="@string/Info_sensores"
               android:textColor="@android:color/background_light" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <Button
               android:id="@+id/btn_h"
               android:layout_width="20dp"
               android:layout_height="180dp"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="30dp"
               android:layout_marginRight="10dp"
               android:layout_weight="1"
               android:background="@drawable/boton_presionar_s"

               android:text="@string/sensor_Humed"
               android:textColor="@android:color/background_light" />

           <Button
               android:id="@+id/btn_t"
               android:layout_width="20dp"
               android:layout_height="180dp"
               android:layout_marginTop="30dp"
               android:layout_marginRight="20dp"
               android:layout_weight="1"
               android:background="@drawable/boton_presionar_s"
               android:text="@string/sensor_Temp"
               android:textColor="@android:color/background_light" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <Button
               android:id="@+id/btn_l"
               android:layout_width="20dp"
               android:layout_height="180dp"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               android:layout_weight="1"
               android:background="@drawable/boton_presionar_s"

               android:text="@string/sensor_Luz"
               android:textColor="@android:color/background_light" />

           <Button
               android:id="@+id/btn_p"
               android:layout_width="20dp"
               android:layout_height="180dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="20dp"
               android:layout_weight="1"
               android:background="@drawable/boton_presionar_s"
               android:text="@string/sensor_Ph"
               android:textColor="@android:color/background_light" />

       </LinearLayout>


   </LinearLayout>

</FrameLayout>